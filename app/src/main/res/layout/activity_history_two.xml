<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History_two">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:scaleType="fitXY"
                android:src="@drawable/history_pogress"
                tools:srcCompat="@drawable/history_pogress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="8"
                android:textColor="#000000"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:text="Info"/>


                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="Complaints" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#0000E4"
                    android:textStyle="bold"
                    android:text="History" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Examination"
                    android:textColor="#000000"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvcurrentaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtviewComp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#4146C8"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="Patient Habits and Hygiene "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <TextView
                        android:id="@+id/tvradiobutn6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:text="How many times a day do you brush your teeth?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:orientation="vertical">

                        <RadioButton android:id="@+id/radio_brushone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="1 times a day"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_brushtwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="2 times a day"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_brushdont"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Not daily"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>


                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:text="Do you floss your teeth? "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_flossyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_flossno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Do you use mouth wash"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_mouthwashyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_mouthwashno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>


                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Tobacco habits?"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:textSize="18sp"
                        android:textColor="#4146C8"
                        android:textStyle="bold"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_tobaccoyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_tobaccono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_tobaccoNA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Smoke form:"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:orientation="vertical">

                        <RadioButton android:id="@+id/radio_cigarette"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cigarette"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_bedi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bedi"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_cigar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cigar"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_hookka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hookka"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_nosmoke"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>


                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Smokeless from or Chewing type "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:orientation="vertical">

                        <RadioButton android:id="@+id/radio_pan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Paan"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_chewtobacco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chew Tobacco"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_supari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arecanut (Supari)"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_jhartha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jhartha"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_sukha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sukha"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_ChewType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>


                        <RadioButton android:id="@+id/radio_chewtypeother"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other(Mention)"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tftilay_otherchew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:buttonTint="#4146C8"
                            android:textColor="#4146C8"
                            android:textStyle="bold"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tftilay_otherchewValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:hint="Pls mention the Condition "
                                android:textColorHint="@color/bg_color"
                                android:textColor="@color/bg_color" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Duration?"
                        android:buttonTint="#4146C8"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:orientation="vertical">

                        <RadioButton android:id="@+id/radio_less5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 5 yrs"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_more5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 to 10yrs"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_more10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="More than 10 years"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_noDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>



                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequency per day?"
                        android:layout_marginTop="20dp"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButtonClicked"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:orientation="vertical">

                        <RadioButton android:id="@+id/radio_less1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 1 pack"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_more1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 to 3 pack"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_more3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More than 3 pack"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_noFrequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:onClick="onRadioButtonClicked"/>



                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvradiobutn15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="#4146C8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Alcohol Habits?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onRadioButtonClicked"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_alcoyes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Yes"
                            android:onClick="onRadioButtonClicked"/>

                        <RadioButton android:id="@+id/radio_alcono"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#4146C8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="No"
                            android:onClick="onRadioButtonClicked"/>


                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnhistory"
                        android:onClick="onNextButtonClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="15dp"
                        android:background="@drawable/nextbt_shape"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>